!!!
%html
  %head
    %title Notebook | Your online Notebook
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      .header_inner
        = link_to image_tag('greenwolf.png'), root_path, id: "logo"
        %nav
          - if user_signed_in?
            = link_to "New Note", new_note_path,  class: "header-button"
            = link_to "Sign Out", destroy_user_session_path, method: :delete,  class: "header-button"
          - else
            = link_to "Log In", new_user_session_path,  class: "header-button"
  %p.notice= notice
  %p.alert= alert

  = yield
